model Coment {
  id     Int     @id @default(autoincrement())
  body   String
  title  String
  image  String?
  postid Int
  userId Int
  Post   Post    @relation(fields: [postid], references: [id])
  User   User    @relation(fields: [userId], references: [id])
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["prismaSchemaFolder"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Post {
  id          Int      @id @default(autoincrement())
  name        String
  author      String
  description String?
  time        String
  userId      Int
  tagId       Int?
  Coment      Coment[]
  User        User     @relation(fields: [userId], references: [id])
  Tags        Tags?    @relation(fields: [tagId], references: [id])
}

model Tags {
  id    Int    @id @default(autoincrement())
  name  String
  posts Post[]
}

model User {
  id       Int      @id @default(autoincrement())
  username String
  email    String   @unique
  password String
  role     String
  posts    Post[]
  comments Coment[]
}
